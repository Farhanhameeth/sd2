<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="286.0" prefWidth="327.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.tutorial2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="22.0" prefWidth="287.0">
      <children>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your Name:  " textAlignment="JUSTIFY" />
         <TextField id="name" promptText="Name" />
      </children>
   </HBox>
   <HBox prefHeight="28.0" prefWidth="287.0">
      <children>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your Age:      " textAlignment="JUSTIFY" />
         <TextField id="age" promptText="Age" />
      </children>
   </HBox>
   <HBox prefHeight="28.0" prefWidth="287.0">
      <children>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Birthday:      " textAlignment="JUSTIFY" />
         <TextField id="dateOfBirth" promptText="DD/MM/YYYY" />
      </children>
   </HBox>
   <HBox prefHeight="28.0" prefWidth="287.0">
      <children>
         <Text strokeType="OUTSIDE" strokeWidth="10.0" text="Gender:" textAlignment="JUSTIFY" />
         <TextField id="gender" />
      </children>
   </HBox>

    <Label fx:id="welcomeText" />
    <Button onAction="#onHelloButtonClick" text="Click Me!" />
</VBox>
